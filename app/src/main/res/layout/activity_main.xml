<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_scrollview">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.cuishuxiang.mycoolweather.widget.action_bar.MainTopBar
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:background="@color/colorPrimary"
                android:id="@+id/main_topbar"
                app:isShowLeftImg="true"
                app:isShowMiddleTxt="true"
                />

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

    <fragment
        android:id="@+id/choose_area_fragment"
        android:name="com.example.cuishuxiang.mycoolweather.ui.fragments.view.ChooseAreaFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        />

</android.support.v4.widget.DrawerLayout>
